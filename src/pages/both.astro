---
import { cities } from "~/cities"
import DefaultLayout from "~/layouts/default.astro"
import IconArrowLeft from "~icons/mdi/arrow-left"
import IconArrowRight from "~icons/mdi/arrow-right"
---

<DefaultLayout title="Audio + Video | Sonification demo">
  <main class="container max-w-3xl flex flex-col px-6 py-12">
    <div class="grow prose max-w-full">
      <h1>Sonification Demo - Audio + Video</h1>
      <p>
        Lorem ipsum, dolor sit amet consectetur adipisicing elit. Consequuntur unde esse nulla deleniti laboriosam laudantium accusamus quia et voluptatem magnam!
      </p>
      {cities.map((city, i) =>
        <div>
          <h2>{i + 1}Â° Video - {city.name}</h2>
          <video controls class="w-full rounded-xl">
            <source src={`https://github.com/gtumedei/sonification-demo/releases/download/v0.0.0/both-${city.code}.mp4`} type="video/mp4" />
          </video>
        </div>
      )}
    </div>
    <div class="grid grid-cols-1 sm:flex sm:justify-between gap-6 mt-24">
      <a href="#" class="inline-flex justify-center items-center gap-4 p-4 rounded-full font-bold bg-teal-300 hover:underline sm:order-2">
        <span class="ml-2">Vai al sondaggio</span> <IconArrowRight />
      </a>
      <a href="/" class="inline-flex justify-center items-center gap-4 p-4 rounded-full font-bold bg-[#F1F3F4] hover:underline sm:order-1">
        <IconArrowLeft /> <span class="mr-2">Torna alla home</span>
      </a>
    </div>
  </main>
</DefaultLayout>
